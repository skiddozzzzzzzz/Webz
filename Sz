  <h1>Roblox Script</h1>

  <div class="container">
    <pre id="scriptBox">loadstring(game:HttpGet("https://raw.githubusercontent.com/skiddozzzzzzzz/UniversalScript/refs/heads/main/UniversalV7.6", true))()</pre>
    <button onclick="copyScript()">Copy Script</button>
    <div class="notification" id="notif">Copied to clipboard!</div>
  </div>

  <script>
    function copyScript() {
      const script = document.getElementById('scriptBox').innerText;
      navigator.clipboard.writeText(script).then(() => {
        const notif = document.getElementById('notif');
        notif.style.display = 'block';
        setTimeout(() => {
          notif.style.display = 'none';
        }, 2000);
      });
    }
  </script>

